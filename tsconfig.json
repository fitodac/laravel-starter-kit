{
	"compilerOptions": {
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"isolatedModules": true,
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./resources/js/*", "./ui-components/*"],
			"ziggy-js": ["./vendor/tightenco/ziggy"],
			"@lib/*": ["./resources/js/lib/*"]
		}
	},
	"include": [
		"ui-components/src/**/*.tsx",
		"ui-components/src/**/*.ts",
		"resources/js/**/*.ts",
		"resources/js/**/*.tsx",
		"resources/js/**/*.d.ts"
, "global.d.ts"	]
}
